{
    "manifest_version": 3,
    "name": "Cookie Killer v3",
    "version": "1.2",
    "description": "Tracks and displays cookies for the current site.",
    "permissions": ["cookies", "tabs", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }